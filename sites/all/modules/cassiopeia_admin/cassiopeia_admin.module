function cassiopeia_admin_taxonomy_menu_insert(&$item) {
  $item = _cassiopeia_admin_taxonomy_menu_item($item);
}

function cassiopeia_admin_taxonomy_menu_update(&$item) {
  $item = _cassiopeia_admin_taxonomy_menu_item($item);
}

function _cassiopeia_admin_taxonomy_menu_item($item) {
  $mlid = _taxonomy_menu_get_mlid($item['tid'], $item['vid']);
  if ($link = menu_link_load($mlid)) {
    if ($link['depth'] == 1) {
      $item['weight'] = $link['weight'];
    }
  }
  return $item;
}


function cassiopeia_admin_get_function() {
  $args = func_get_args();
  $func = $args[0];
  if (!function_exists($func)) {
    return FALSE;
  }
  unset($args[0]);
  return call_user_func_array($func, $args);
}
