function cassiopeia_admin_get_icon() {
  $sql = "SELECT icon FROM cassiopeia_admin_items WHERE link = :link";
  $result = db_query($sql, array(':link' => $_GET['q']))->fetchAll();
  if (!empty($result[0])) {
    return 'c3s-icon c3s-icon-' . $result[0]->icon;
  }
  elseif (arg(0) == 'user') {
    return 'c3s-icon c3s-icon-nguoidung2';
  }
  return FALSE;
}

function cassiopeia_admin_get_items_all() {
  $sql = "SELECT b.id, b.name as name, b.position, b.icon, i.id as item_id, i.name as item_name, i.link, i.icon as item_icon, i.position as item_position
  FROM {cassiopeia_admin_block} b JOIN {cassiopeia_admin_items} i ON b.id = i.bid ORDER BY b.position, i.position";
  $result = db_query($sql)->fetchAll();
  return $result;
}

function cassiopeia_admin_get_menu_left($theme = '') {
  //if(!user_access('cassiopeia admin content')) return '';
  $result = cassiopeia_admin_get_items_all();
  //todo
  $list = array();
  foreach ($result as $item) {
    if (empty($list[$item->id])) {
      $list[$item->id] = array(
        '#title' => theme('cassiopeia_admin_administrator_icon', array('icon' => $item->icon)) . '<span>' . $item->name . '</span>',
        '#href' => $_GET['q'],
        '#attributes' => array(),
        '#localized_options' => array('html' => TRUE, 'fragment' => 'top'),
      );
    }
    if (!empty($list[$item->id])) {
      $argument = explode('?', $item->link);
      if (drupal_valid_path($argument[0])) {
        $args = array();
        if (count($argument) == 2) {
          $ex = explode('&', $argument[1]);
          foreach ($ex as $part) {
            $ex1 = explode('=', $part);
            if (count($ex1) == 2) {
              $args[$ex1[0]] = $ex1[1];
            }
          }
        }
        $list[$item->id]['#below'][$item->item_id] = array(
          '#title' => theme('cassiopeia_admin_administrator_icon', array('icon' => $item->item_icon)) . '<span>' . $item->item_name . '</span>',
          '#href' => $argument[0],
          '#attributes' => array(),
          '#localized_options' => array('html' => TRUE, 'query' => $args),
        );
      }
    }
  }
  drupal_alter('cassiopeia_admin_get_menu_left', $list);
  if ($theme) {
    return theme($theme, array('items' => $list));
  }
  return theme('cassiopeia_admin_get_menu_left', array('items' => $list));
}

