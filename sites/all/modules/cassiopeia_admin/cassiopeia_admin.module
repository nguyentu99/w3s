function cassiopeia_admin_block_items_load($id_items) {
  $sql = "SELECT id, name, link, icon, position FROM cassiopeia_admin_items WHERE id = :id";
  $result = db_query($sql, array(":id" => $id_items))->fetchAll();
  if (!empty($result[0])) {
    return $result[0];
  }
  return FALSE;
}

