function cassiopeia_admin_form_alter(&$form, &$form_state, $form_id) {
  if ($form_id == 'user_login') {
    if (user_access('cassiopeia admin content')) {
      $form['#submit'] = array('cassiopeia_admin_custom_login');
    }
  }
  elseif ($form_id == 'system_cron_settings') {
    $form['cron']['cron_safe_threshold']['#options'][1800] = "30 min";
    $form['cron']['cron_safe_threshold']['#options'][300] = "5 min";
  }
  if (strpos($form_id, "node_form") !== FALSE) {
    $form['domain']['#group'] = 'additional_settings';
  }
}

function cassiopeia_admin_custom_login($form, &$form_state) {
  global $user;
  $user = user_load($form_state['uid']);
  $form_state['redirect'] = 'administrator';
  user_login_finalize($form_state);
}

function _cassiopeia_admin_block_add($name, $icon, $position) {
  db_insert('cassiopeia_admin_block')
    ->fields(array(
      'name' => $name,
      'icon' => $icon,
      'position' => $position,
    ))
    ->execute();
}

function _cassiopeia_admin_block_edit($block, $edit) {
  db_update('cassiopeia_admin_block')
    ->fields(array(
      'name' => empty($edit['name']) ? $block->name : $edit['name'],
      'icon' => empty($edit['icon']) ? $block->icon : $edit['icon'],
      'position' => empty($edit['position']) ? $block->position : $edit['position'],
    ))
    ->condition('id', $block->id, '=')
    ->execute();
}

function _cassiopeia_admin_block_position_update($id, $position) {
  db_update('cassiopeia_admin_block')
    ->fields(array(
      'position' => $position,
    ))
    ->condition('id', $id, '=')
    ->execute();
}

